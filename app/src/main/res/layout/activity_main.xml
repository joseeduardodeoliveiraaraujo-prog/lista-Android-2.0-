<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:title="Minhas Tarefas"
        app:titleTextColor="#333333" />

	<!-- Card/resumo com contadores (total, concluídas, pendentes) -->
	<LinearLayout
		android:id="@+id/cardResumo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/toolbar"
		android:orientation="horizontal"
		android:background="#FFFFFF"
		android:padding="12dp"
		android:layout_marginHorizontal="10dp"
		android:layout_marginTop="10dp"
		android:elevation="2dp">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
			<TextView
				android:id="@+id/txtTotal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Total: 0"
				android:textStyle="bold"
				android:textColor="#333333"
				android:textSize="16sp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tarefas cadastradas"
				android:textColor="#777777"
				android:textSize="12sp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
			<TextView
				android:id="@+id/txtConcluidas"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Concluídas: 0"
				android:textStyle="bold"
				android:textColor="#2E7D32"
				android:textSize="16sp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Finalizadas"
				android:textColor="#777777"
				android:textSize="12sp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
			<TextView
				android:id="@+id/txtPendentes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Pendentes: 0"
				android:textStyle="bold"
				android:textColor="#C62828"
				android:textSize="16sp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="A fazer"
				android:textColor="#777777"
				android:textSize="12sp"/>
		</LinearLayout>
	</LinearLayout>

    <ListView
        android:id="@+id/listViewTarefas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_below="@id/cardResumo"
		android:layout_marginTop="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingBottom="80dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:contentDescription="Adicionar tarefa"
        app:backgroundTint="#4CAF50"
        app:srcCompat="@android:drawable/ic_input_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnExcluirConcluidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:contentDescription="Excluir tarefas concluídas"
        app:backgroundTint="#C62828"
        app:srcCompat="@drawable/ic_lixeira"
        app:tint="@android:color/white"
        app:fabSize="normal" />



</RelativeLayout>
